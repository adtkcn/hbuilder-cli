{
  "name": "hbuilder-cli",
  "publisher": "xiangheng",
  "displayName": "HBuilder-cli",
  "description": "HBuilder 的cli工具封装, 可以打开HBuilder,添加项目, 打包uniapp 和 5+App",
  "repository": {
    "type": "git",
    "url": "https://github.com/adtkcn/hbuilder-cli.git"
  },
  "icon": "media/hbuilder-icon.png",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hbuilder-cli.openHBuilder",
    "onCommand:hbuilder-cli.buildApp"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "HBuilder安装配置",
        "properties": {
          "HBuilder.dir": {
            "type": "string",
            "default": "",
            "description": "请输入HBuilder安装目录(优先级高),或者将目录加入系统环境变量,变量名HBuilder"
          }
        }
      }
    ],
    "html": {
      "customData": [
        "./html.html-data.json"
      ]
    },
    "css": {
      "customData": [
        "./css.css-data.json"
      ]
    },
    "commands": [
      {
        "command": "hbuilder-cli.openHBuilder",
        "title": "打开HBuilder并添加项目"
      },
      {
        "command": "hbuilder-cli.buildApp",
        "title": "HBuilder打包APP"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "hbuilder-cli.openHBuilder",
          "group": "6_px"
        },
        {
          "when": "editorFocus",
          "command": "hbuilder-cli.buildApp",
          "group": "6_px"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "push": "vsce publish patch"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "iconv-lite": "^0.6.2",
    "json5": "^2.2.0",
    "koa": "^2.13.1",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "qrcode": "^1.4.4"
  }
}

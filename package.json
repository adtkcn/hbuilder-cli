{
	"name": "xh-uniapp-cli",
	"publisher": "xiangheng",
	"displayName": "xh-uniapp-cli",
	"description": "HBuilder 的cli工具封装,可以打开HBuilder,添加项目,打包App",
	"repository": {
		"type": "git",
		"url": "git@github.com:adtkcn/vscodedemo.git"
	},
	"icon": "media/icon.jpg",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:xh-vscodedemo.openHBuilder"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "HBuilder安装配置",
				"properties": {
					"HBuilder.dir": {
						"type": "string",
						"default": "",
						"description": "请输入HBuilder安装目录(优先级高),或者将目录加入系统环境变量HBuilder(没试...)"
					}
				}
			}
		],
		"html": {
			"customData": [
				"./html.html-data.json"
			]
		},
		"css": {
			"customData": [
				"./css.css-data.json"
			]
		},
		"commands": [
			{
				"command": "xh-vscodedemo.openHBuilder",
				"title": "打开HBuilder并添加项目"
			},
			{
				"command": "xh-vscodedemo.buildApp",
				"title": "HBuilder打包APP"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "xh-vscodedemo.openHBuilder",
					"group": "6_px"
				},
				{
					"when": "editorFocus",
					"command": "xh-vscodedemo.buildApp",
					"group": "6_px"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"push": "vsce publish patch"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"iconv-lite": "^0.6.2",
		"json5": "^2.2.0"
	}
}
